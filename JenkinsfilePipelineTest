def libraries = ['ci-pipeline'             : ['generic-pipeline', 'https://github.com/joejstuart/ci-pipeline.git']]

libraries.each { name, repo ->
    library identifier: "${name}@${repo[0]}",
            retriever: modernSCM([$class: 'GitSCMSource',
                                  remote: repo[1]])

}

containers = ['rpmbuild': ['tag': 'latest']]

podTemplate(
    parameters: containers
)
